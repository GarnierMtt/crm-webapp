{% extends 'base.html.twig' %}

{% block title %} - Contact index{% endblock %}

{% block head %}
    <link rel="stylesheet" href="{{ asset('styles/indexTable.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/buttons.css') }}">
{% endblock %}

{% block content %}
    <h1>Contact index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Mél</th>
                <th>Téléphone</th>
                <th>Pôst</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td>{{ contact.nom }}</td>
                <td>{{ contact.prenom }}</td>
                <td>{{ contact.mel }}</td>
                <td>{{ contact.telephone }}</td>
                <td>{{ contact.post }}</td>
                <td>
                    <a href="{{ path('app_contact_show', {'id': contact.id}) }}">show</a>
                    <a href="{{ path('app_contact_edit', {'id': contact.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="createButton" href="{{ path('app_contact_new') }}">Create new</a>
{% endblock %}
