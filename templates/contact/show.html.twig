{% extends 'base.html.twig' %}
{% set contact = render(path('api_contact_show', {'id': id}))|json_decode %}

{% block title %} - Contact{% endblock %}


{% block path %}
    <a href="{{ path('app_contact_index') }}">Contacts/</a>
    <a href="{{ path('app_contact_show', {'id': id}) }}">{{ contact.nom }} {{ contact.prenom }}</a>
{% endblock %}
{% block content %}
    <table class="table">
        <tbody>
                <tr>
                    <th>Nom</th>
                    <td>{{ contact.nom }}</td>
                </tr>
                <tr>
                    <th>Prénom</th>
                    <td>{{ contact.prenom }}</td>
                </tr>
                <tr>
                    <th>Mél</th>
                    <td>{{ contact.mel }}</td>
                </tr>
                <tr>
                    <th>Téléphone</th>
                    <td>{{ contact.telephone }}</td>
                </tr>
                <tr>
                    <th>Pôst</th>
                    <td>{{ contact.post }}</td>
                </tr>
                    <th>Société</th>
                    <td>{{ contact.societe.nom is defined ? contact.societe.nom }}</td>
                </tr>
        </tbody>
    </table>

    <a class="btn" onclick="uiPopupBtn('#editContact')">Modifier</a>
    
    <a class="btn delete" onclick="apiDeleteObj('{{ path("api_contact_delete", {"id": id}) }}', '{{ path("app_contact_index") }}');">Delete</a>
    
    <div id="editContact"> <!-- popup edit contact -->
        <span>modifier le contact :</span>

        {{ include('contact/_form.html.twig', {'edit': id}) }}
        
    </div>
    
{% endblock %}

{% block script %}
    <script>
        $(function(){
            $( "#editContact" ).popup();
        });
    </script>
{% endblock %}
