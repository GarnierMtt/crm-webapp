{% extends 'base.html.twig' %}

{% block title %} - Index projet{% endblock %}


{% block path %}
    <a href="{{ path('app_projet_index') }}">Projets</a>
{% endblock %}
{% block content %}

    <table class="table">
        <thead>
                <tr>
                    <th>Name</th>
                    <th>StartDate</th>
                    <th>DateEnd</th>
                    <th>Id</th>
                </tr>
        </thead>
        <tbody>
                {% for projet in projets %}
                    <tr onclick="window.location.href = '{{ path('app_projet_show', {'id': projet.id}) }}'">
                        <td>{{ projet.name }}</td>
                        <td>{{ projet.startDate ? projet.startDate|date('Y-m-d') : '' }}</td>
                        <td>{{ projet.dateEnd ? projet.dateEnd|date('Y-m-d') : '' }}</td>
                        <td>{{ projet.id }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">no records found</td>
                    </tr>
                {% endfor %}
        </tbody>
    </table>

    <a class="btn create" href="{{ path('app_projet_new') }}">Cr√©er nouveau projet</a>

   
{% endblock %}
