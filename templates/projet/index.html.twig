{% extends 'base.html.twig' %}

{% block title %} - Index projet{% endblock %}

{% block head %}
    <link rel="stylesheet" href="{{ asset('styles/indexTable.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/buttons.css') }}">
{% endblock %}

{% block content %}
    <h1>Projet index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>StartDate</th>
                <th>DateEnd</th>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for projet in projets %}
            <tr>
                <td>{{ projet.name }}</td>
                <td>{{ projet.startDate ? projet.startDate|date('Y-m-d') : '' }}</td>
                <td>{{ projet.dateEnd ? projet.dateEnd|date('Y-m-d') : '' }}</td>
                <td>{{ projet.id }}</td>
                <td>
                    <a href="{{ path('app_projet_show', {'id': projet.id}) }}">show</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="createButton" href="{{ path('app_projet_new') }}">Cr√©er nouveau projet</a>
{% endblock %}
