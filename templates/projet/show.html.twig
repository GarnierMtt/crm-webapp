{% extends 'base.html.twig' %}

{% block title %} - Projet{% endblock %}

{% block head %}
    <link rel="stylesheet" href="{{ asset('styles/calendar.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/projet.css') }}">
{% endblock %}

{% block content %}
    <div class="grid">
        <div class="page-rightbar">
            <div class="item">
                <div style="margin-top: 10px;">
                    <div class="cal-container">
                        <div>
                            <span>Débute le :</span>
                            <input type="date" value="{{ projet.startDate ? projet.startDate|date('Y-m-d') : '' }}"/>
                        </div>
                        <div>
                            <span>Fini le :</span>
                            <input type="date" value="{{ projet.dateEnd ? projet.dateEnd|date('Y-m-d') : '' }}"/>
                        </div>
                    </div>
                </div>
                <div style="margin-top: 10px;">
                    <table class="table objTable">
                        <tr>
                            <th colspan="2">
                                <span>Sociétés</span>
                                <a onclick="menueNvlSte()">[+]</a>
                            </th>
                        </tr>
                        {% for pair in projet.societes %}
                            <tr>
                                <td>{{ pair.relation }}</td>
                                <td>{{ pair.societe }}</td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="2">aucune sociétée associée</td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>
            </div>
        </div>

        <div class="page-header">
            <div class="item">
                <div class="proj-head">
                    <div>
                        <h1>- {{ projet.name }}</h1>
                        <span>- Id: {{ projet.id }}</span>
                    </div>
                    <div style="margin-top: 50px; width: 50%;">
                        <label>Description :</label>
                        <textarea>rgr
                        </textarea>
                    </div>
                </div>
            </div>
        </div>

        <div class="page-main">
            <div class="item">
                <div class="treeView">
                    <h2>Arborescence du projet</h2>
                    {{ htmlTree|raw }}
                </div>
                
            </div>
        </div>
    </div>
{% endblock %}
